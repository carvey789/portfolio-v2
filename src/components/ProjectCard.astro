---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

interface Props {
  project: {
    image: string;
    title: string;
    date: string;
    ghLink: string;
    urlLink: string;
    stack: string[];
  };
}

const { project } = Astro.props;
---

<div
  class="flex flex-col gap-6 mb-20 sm:mb-24 lg:mb-[120px] lg:flex-row lg:justify-between"
>
  <div class="lg:w-1/2">
    <Image src={project.image} alt={project.title} width={1366} height={607} />
  </div>
  <div class="flex flex-col lg:w-1/3">
    <h1 class="mb-1 text-xl md:text-2xl">{project.title}</h1>
    <p class="mb-4 text-xs text-white-main/60 sm:text-sm md:text-base">
      {project.date}
    </p>
    <span class="text-xs mb-2 sm:text-sm md:text-base flex items-center gap-2">
      <Icon name="mdi:link" /><a href={project.urlLink}>{project.urlLink}</a>
    </span>
    <span class="text-xs mb-4 sm:text-sm md:text-base flex items-center gap-2">
      <Icon name="mdi:github" /><a href={project.ghLink}>{project.ghLink}</a>
    </span>
    <div>
      <h1 class="text-base mb-2 md:text-2xl">Tech</h1>
      <div class="flex gap-4">
        {
          project.stack.map((stack) => (
            <span class="inline-block px-3 py-1 rounded-[20px] bg-white-main/20">
              {stack}
            </span>
          ))
        }
      </div>
    </div>
  </div>
</div>
